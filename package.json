{
  "name": "lighthouse",
  "version": "1.0.0",
  "description": "Lighthouse analyzes web apps and web pages, collecting modern performance metrics and insights on developer best practices.",
  "scripts": {
    "check": "npm run lint && npm run test",
    "lint": "prettier --check \"test/**/*\"",
    "lint:fix": "prettier --write \"test/**/*\"",
    "test": "lhci autorun --config=test/lighthouserc.json",
    "clean": "rimraf .lighthouseci/"
  },
  "devDependencies": {
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@lhci/cli": "^0.9.0",
    "husky": "^4.3.8",
    "lint-staged": "^12.1.2",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2"
  },
  "engines": {
    "node": ">=14.18.1",
    "npm": ">=6.14.15"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  }
}
